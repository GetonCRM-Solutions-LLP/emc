    <rules>
        <fullName>Send Mail to client if  LOA Fixed Amount Change</fullName>
        <actions>
            <name>LOA_Fixed_Amount_Changed</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>If LOA Amount is changes at that time send a mail to client with updated amount.</description>
        <formula>OR(
AND(ISCHANGED( LOA_Fixed_Amount__c),NOT(ISBLANK(LOA_Fixed_Amount__c))),
AND(ISCHANGED(LOA_Start_Date__c),NOT(ISBLANK(LOA_Start_Date__c))), 
AND(ISCHANGED(LOA_End_Date__c),NOT(ISBLANK(LOA_End_Date__c))), 
AND(ISCHANGED(Payroll_Period__c),NOT(ISBLANK(Payroll_Period__c)))
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
