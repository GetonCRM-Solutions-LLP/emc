<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>New_ActionItem_record_create_Email_Alert</fullName>
        <ccEmails>Sanjayh.goc@gmail.com</ccEmails>
        <ccEmails>natavar.goc@gmail.com</ccEmails>
        <ccEmails>minkesh.patel@getoncrm.com</ccEmails>
        <ccEmails>jigneshpatel.goc@gmail.com</ccEmails>
        <description>New ActionItem record create Email Alert</description>
        <protected>false</protected>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/New_ActionItem_Record_create_Template</template>
    </alerts>
    <alerts>
        <fullName>Status_field_change_on_ActionItem_object</fullName>
        <ccEmails>atindrasinh.goc@gmail.com</ccEmails>
        <description>Status field change on ActionItem object</description>
        <protected>false</protected>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Status_change_Ready_for_Review</template>
    </alerts>
    <alerts>
        <fullName>Status_field_change_on_ActionItem_object_than_Email</fullName>
        <ccEmails>willh@mburse.com</ccEmails>
        <ccEmails>sanket.goswami@getoncrm.com</ccEmails>
        <ccEmails>minkesh.patel@getoncrm.com</ccEmails>
        <description>Status field change on ActionItem object than Email</description>
        <protected>false</protected>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Status_change_Ready_for_Review</template>
    </alerts>
    <rules>
        <fullName>New ActionItem Record create</fullName>
        <actions>
            <name>New_ActionItem_record_create_Email_Alert</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>ActionItem__c.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>When new ActionItem Record create</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Status change On ActionItem Object</fullName>
        <actions>
            <name>Status_field_change_on_ActionItem_object_than_Email</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>ActionItem__c.Status__c</field>
            <operation>equals</operation>
            <value>Move to Production</value>
        </criteriaItems>
        <criteriaItems>
            <field>ActionItem__c.Status__c</field>
            <operation>equals</operation>
            <value>Ready for Review for Client</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
