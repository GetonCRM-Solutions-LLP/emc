    <script>
          fetch("/app/c/LWCLightningApp.app?aura.format=JSON&aura.formatAdapter=LIGHTNING_OUT")
          .then(function (response) {
              if (response.status !== 200) {
                  document.getElementById("mLoader").classList.add("d-none");
